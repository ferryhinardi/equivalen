{
  "name": "equivalen",
  "version": "0.0.30",
  "private": true,
  "author": {
    "name": "PT Global Prima Solusindo",
    "email": "ferry.hinardi@pt-gps.com"
  },
  "description": "Kesetaraan Belajar",
  "repository": "https://github.com/ferryhinardi/equivalent",
  "devDependencies": {
    "babel-eslint": "8.1.0",
    "concurrently": "^3.6.0",
    "devtron": "^1.4.0",
    "electron": "^2.0.4",
    "electron-builder": "20.26.0",
    "electron-reload": "^1.2.5",
    "eslint": "4.14.0",
    "eslint-plugin-flowtype": "^2.50.0",
    "eslint-plugin-react": "7.5.1",
    "foreman": "^3.0.1",
    "react-app-rewire-decorators-legacy": "^0.1.0",
    "react-scripts": "1.1.4",
    "wait-on": "^2.1.0"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "prerelease",
    "@fortawesome/free-solid-svg-icons": "prerelease",
    "@fortawesome/react-fontawesome": "prerelease",
    "apollo-boost": "^0.1.15",
    "body-parser": "^1.18.3",
    "cors": "^2.8.4",
    "electron-is-dev": "^0.3.0",
    "electron-log": "^2.2.16",
    "electron-updater": "^3.0.3",
    "express": "^4.16.3",
    "flow-bin": "^0.77.0",
    "flow-typed": "^2.5.1",
    "graphql": "^0.13.2",
    "graphql-tag": "^2.9.2",
    "immutability-helper": "^2.7.1",
    "is-electron-renderer": "^2.0.1",
    "mustache": "^2.3.2",
    "node-machine-id": "^1.1.10",
    "platform": "^1.3.5",
    "prop-types": "^15.6.2",
    "proxyquire": "^2.0.1",
    "ramda": "0.24.0",
    "react": "^16.4.1",
    "react-apollo": "^2.1.11",
    "react-art": "^16.4.1",
    "react-date-picker": "^6.12.0",
    "react-dom": "^16.4.1",
    "react-modal": "^3.5.1",
    "react-native": "^0.56.0",
    "react-native-web": "^0.8.9",
    "react-redux": "^5.0.7",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "react-select": "^2.0.0",
    "redux": "^4.0.0",
    "redux-persist": "^5.10.0",
    "redux-persist-electron-storage": "^1.1.2",
    "redux-thunk": "^2.3.0",
    "rewire": "^4.0.1"
  },
  "main": "build/electron.js",
  "build": {
    "appId": "com.gps.equivalent",
    "files": [
      "./build/**/*",
      "./build/electron.js"
    ],
    "dmg": {
      "contents": [
        {
          "x": 281,
          "y": 249,
          "type": "file"
        },
        {
          "x": 532,
          "y": 249,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "mac": {
      "category": "public.app-category.productivity",
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "target": "zip",
      "icon": "./public/icon_square.png",
      "publish": [
        {
          "provider": "github",
          "repo": "equivalen",
          "owner": "fhinardi"
        }
      ]
    },
    "linux": {
      "description": "Equivalen Desktop Client for Linux",
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "./public/icon_square.png",
      "maintainer": "Ferry Hinardi <ferry.hinardi@pt-gps.com>",
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "publish": [
        {
          "provider": "github",
          "repo": "equivalen",
          "owner": "fhinardi"
        }
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "./public/icon_square.png",
      "certificateFile": "private/ptgps.pfx",
      "verifyUpdateCodeSignature": false,
      "publisherName": "ptgps",
      "publish": [
        {
          "provider": "github",
          "repo": "equivalen",
          "owner": "fhinardi"
        }
      ]
    },
    "nsis": {
      "perMachine": true,
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "directories": {
      "buildResources": "public"
    }
  },
  "scripts": {
    "dev": "nf start -p 3000",
    "start": "node scripts/customized-config start",
    "build": "node --max_old_space_size=8000 scripts/customized-config build",
    "test": "yarn test:flow && node scripts/customized-config test --env=jsdom",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-dev": "concurrently \"BROWSER=none yarn start\" \"wait-on http://localhost:3000 && ELECTRON_START_URL=http://localhost:3000 electron .\"",
    "preinstall": "yarn global add electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "electron-pack:mac": "electron-builder --mac -c.extraMetadata.main=build/electron.js",
    "electron-pack:win": "electron-builder --win -c.extraMetadata.main=build/electron.js",
    "electron-pack:linux": "electron-builder --linux -c.extraMetadata.main=build/electron.js",
    "publish:mac": "GH_TOKEN=36aeee759e974840cbcd481e3ea8325216609d28 electron-builder --mac --publish always -c.extraMetadata.main=build/electron.js",
    "publish:win": "GH_TOKEN=36aeee759e974840cbcd481e3ea8325216609d28 electron-builder --win --publish always -c.extraMetadata.main=build/electron.js",
    "publish:linux": "GH_TOKEN=36aeee759e974840cbcd481e3ea8325216609d28 electron-builder --linux --publish always -c.extraMetadata.main=build/electron.js",
    "make-cert": "electron-builder create-self-signed-cert -p ptgps",
    "dist": "yarn publish:mac && yarn publish:win && yarn publish:linux",
    "test:flow": "node_modules/flow-bin/cli.js --show-all-errors"
  }
}
